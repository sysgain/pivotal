{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apigeeEdge": {
      "type": "String",
      "allowedValues": [
        "ApigeeRequired",
        "ApigeeNotRequired"
      ],
      "metadata": {
        "description": "Select if you want to deploy Apigee Edge Gateway and Apigee Service Broker"
      }
    },
    "tshirtSize": {
      "type": "string",
      "defaultValue": "XSmall",
      "metadata": {
        "description": "T-shirt size of the Apigee deployment"
      }
    },
    "apigeeDeploymentName": {
      "type": "string",
      "metadata": {
        "description": "Deployment Name It can not be more than 10 characters in length and use numbers and lower-case letters only."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "West US",
      "allowedValues": [
        "Brazil South",
        "East Asia",
        "East US",
        "Japan East",
        "Japan West",
        "North Central US",
        "North Europe",
        "South Central US",
        "West Europe",
        "West US",
        "Southeast Asia",
        "Central US",
        "East US 2"
      ],
      "metadata": {
        "description": "Deployment location of where Apigee will be installed"
      }
    },

    "adminUserName": {
      "type": "string",
      "metadata": {
        "description": "Apigee Admin User Name"
      }
    },
    "apigeeAdminPassword": {
      "type": "securestring"
    },
    "apigeeAdminEmail": {
      "type": "string",
      "metadata": {
        "description": "email address used as super admin of Apigee deployment"
      }
    },

    "sshKey": {
      "type": "securestring",
      "metadata": {
        "description": "The public key for the username given. You can use SSH Agent to generate a key pair. https://help.github.com/articles/generating-a-new-ssh-key-and-adding-it-to-the-ssh-agent/"
      }
    },
    "sshPrivateKey": {
      "type": "securestring",
      "metadata": {
        "description": "The private key for the username given. This is used to login to other instances if a multi node deployment (Medium, Large t-shirt sizes) is selected."
      }
    },

    "licenseFileText": {
      "type": "securestring",
      "metadata": {
        "description": "License file that is given to your organization by Apigee. Paste the content of the file here"
      }
    },
    "templateLocation": {
      "type": "string",
      "defaultValue": "https://gallery.azure.com/artifact/20151001/apigee.apigee-edgeapigee-edge.1.0.2/Artifacts",
      "metadata": {
        "description": "Template file location",
        "artifactsBaseUrl": "Base URL of the Publisher Template gallery package"
      }
    },

    "storageAccountNamePrefixString": {
      "type": "string",
      "metadata": {
        "description": "Unique DNS Name for the Storage Account prefix where the Virtual Machine's disks will be placed. It can not be more than 10 characters in length and use numbers and lower-case letters only."
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "boshvnet-crp",
      "metadata": {
        "description": "name of the virtual network"
      }
    },
    "subnetNameForBosh": {
      "type": "string",
      "defaultValue": "Bosh",
      "metadata": {
        "description": "name of the subnet for Bosh"
      }
    },
    "NSGNameForBosh": {
      "type": "string",
      "defaultValue": "BoshSecurityGroup",
      "metadata": {
        "description": "name of the security group for Bosh"
      }
    },
    "subnetNameForCloudFoundry": {
      "type": "string",
      "defaultValue": "CloudFoundry",
      "metadata": {
        "description": "name of the subnet for CloudFoundy"
      }
    },
    "NSGNameForCF": {
      "type": "string",
      "defaultValue": "CFSecurityGroup",
      "metadata": {
        "description": "name of the security group for CF"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_D2_v2",
      "metadata": {
        "description": "Size of vm"
      }
    },
    "pcfAdminUserName": {
      "type": "string",
      "defaultValue": "pivotal",
      "metadata": {
        "description": "User name for the Virtual Machine."
      }
    },
    "adminSSHKey": {
      "type": "securestring",
      "metadata": {
        "description": "Public SSH key to add to admin user."
      }
    },
    "enableDNSOnDevbox": {
      "type": "bool",
      "defaultValue": true,
      "allowedValues": [
        true,
        false
      ],
      "metadata": {
        "description": "A default DNS will be setup in the devbox if it is true."
      }
    },
    "tenantID": {
      "type": "string",
      "defaultValue": "TENANT-ID",
      "metadata": {
        "description": "ID of the tenant. See https://github.com/cloudfoundry-incubator/bosh-azure-cpi-release/blob/master/docs/guidance.md"
      }
    },
    "clientID": {
      "type": "string",
      "defaultValue": "CLIENT-ID",
      "metadata": {
        "description": "ID of the client. See https://github.com/cloudfoundry-incubator/bosh-azure-cpi-release/blob/master/docs/guidance.md"
      }
    },
    "clientSecret": {
      "type": "securestring",
      "defaultValue": "CLIENT-SECRET",
      "metadata": {
        "description": "secret of the client. See https://github.com/cloudfoundry-incubator/bosh-azure-cpi-release/blob/master/docs/guidance.md"
      }
    },
    "pivnetAPIToken": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "API Token for Pivotal Network"
      }
    },
    "installSize": {
      "type": "string",
      "defaultValue": "Small",
      "metadata": {
        "description": "Size of the install"
      }
    }

  },
  "variables": {
    "api-version": "2015-06-15",
    "extensionName": "initdevbox",
    "newStorageAccountName": "[concat(parameters('storageAccountNamePrefixString'),uniquestring(resourceGroup().id, deployment().name))]",
    "vmName": "[concat('myjumpbox',uniquestring(resourceGroup().id, deployment().name))]",
    "location": "[parameters('location')]",
    "storageAccountType": "Standard_GRS",
    "vmStorageAccountContainerName": "vhds",
    "storageid": "[resourceId('Microsoft.Storage/storageAccounts', variables('newStorageAccountName'))]",
    "virtualNetworkName": "[parameters('virtualNetworkName')]",
    "sshKeyPath": "[concat('/home/',parameters('adminUsername'),'/.ssh/authorized_keys')]",
    "addressPrefix": "10.0.0.0/16",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
    "subnet1Name": "[parameters('subnetNameForBosh')]",
    "subnet1Prefix": "10.0.0.0/24",
    "subnet1Ref": "[concat(variables('vnetID'),'/subnets/', variables('subnet1Name'))]",
    "subnet1NSG": "[parameters('NSGNameForBosh')]",
    "subnet2Name": "[parameters('subnetNameForCloudFoundry')]",
    "subnet2Prefix": "10.0.16.0/20",
    "subnet2NSG": "[parameters('NSGNameForCF')]",
    "nicName": "[variables('vmName')]",
    "devboxPrivateIPAddress": "10.0.0.100",
    "devboxPublicIPAddressID": "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('vmName'),'-devbox'))]",
    "imagePublisher": "Canonical",
    "imageOffer": "UbuntuServer",
    "ubuntuOSVersion": "14.04.2-LTS",
    "webSessionPassword": "[uniqueString(parameters('adminSSHKey'))]",
    "baseUri": "https://raw.githubusercontent.com/sysgain/pivotal/pivotal-P2P/apigee/",
    "apigeeTemplateLink": "[concat(variables('baseUri'),parameters('apigeeEdge'),'.json')]",
    "pcfTemplateLink":"https://raw.githubusercontent.com/sysgain/pivotal/pivotal-P2P/pcf/pcf.json"
  },
  "resources": [{
      "name": "apigeeEdge",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('apigeeTemplateLink')]",

          "contentVersion": "1.0.0.0"

        },
        "parameters": {
          "tshirtSize": {
            "value": "[parameters('tshirtSize')]"
          },

          "location": {
            "value": "[parameters('location')]"
          },
          "apigeeDeploymentName": {
            "value": "[parameters('apigeeDeploymentName')]"
          },
          "adminUserName": {
            "value": "[parameters('adminUserName')]"
          },
          "apigeeAdminEmail": {
            "value": "[parameters('apigeeAdminEmail')]"
          },
          "apigeeAdminPassword": {
            "value": "[parameters('apigeeAdminPassword')]"
          },
          "sshKey": {
            "value": "[parameters('sshKey')]"
          },
          "sshPrivateKey": {
            "value": "[parameters('sshPrivateKey')]"
          },

          "licenseFileText": {
            "value": "[parameters('licenseFileText')]"
          },
          "templateLocation": {
            "value": "[parameters('templateLocation')]"
          }

        }
      }
    },
    {
      "name": "pcf",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "dependsOn": [
        "['Microsoft.Resources/deployments/apigeeEdge']"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
        "uri": "[variables('pcfTemplateLink')]",

          "contentVersion": "1.0.0.0"

        },
        "parameters": {
    "managementUI": {
           "value":"[reference('apigeeEdge').outputs.managementUI.value]"
           },
    "storageAccountNamePrefixString": {
            "value": "[parameters('storageAccountNamePrefixString')]"
          },
    "virtualNetworkName": {
            "value": "[parameters('virtualNetworkName')]"
          },
    "subnetNameForBosh": {
            "value": "[parameters('subnetNameForBosh')]"
          },
    "NSGNameForBosh": {
            "value": "[parameters('NSGNameForBosh')]"
          },
    "subnetNameForCloudFoundry": {
            "value": "[parameters('subnetNameForCloudFoundry')]"
          },
    "NSGNameForCF": {
            "value": "[parameters('NSGNameForCF')]"
          },
    "vmSize": {
            "value": "[parameters('vmSize')]"
          },
    "pcfAdminUserName": {
            "value": "[parameters('pcfAdminUserName')]"
          },
    "adminSSHKey": {
            "value": "[parameters('adminSSHKey')]"
          },
    "enableDNSOnDevbox": {
            "value": "[parameters('enableDNSOnDevbox')]"
          },
    "tenantID": {
            "value": "[parameters('tenantID')]"
          },
    "clientID": {
            "value": "[parameters('clientID')]"
          },
    "clientSecret": {
            "value": "[parameters('clientSecret')]"
          },
    "pivnetAPIToken": {
            "value": "[parameters('pivnetAPIToken')]"
          },
    "installSize": {
            "value": "[parameters('installSize')]"
          }
        }
      }

}
  ],
  "outputs": {
    "managementUI": {
      "type": "String",
      "value": "[reference('apigeeEdge').outputs.managementUI.value]"
    },
    "managementPublicDNSName": {
      "type": "String",
      "value": "[reference('apigeeEdge').outputs.managementPublicDNSName.value]"
    },
    "runtimePublicDNSName": {
      "type": "String",
      "value": "[reference('apigeeEdge').outputs.runtimePublicDNSName.value]"
    },
    "scriptoutput": {
      "type": "String",
      "value": "[reference('pcf').outputs.scriptoutput.value]"
    },
    "ProgressMonitorURL": {
      "type": "String",
      "value": "[reference('pcf').outputs.ProgressMonitorURL.value]"
    },
    "Jumpbox": {
      "type": "String",
      "value": "[reference('pcf').outputs.Jumpbox.value]"
    }
  }
    


}
